---
import Image from "astro/components/Image.astro";
import coco from "../../images/coco.jpg";
import rollo from "../../images/rollo.jpg";
import surtido from "../../images/surtido.jpg";
import frances from "../../images/frances.jpg";
import francesDetalle from "../../images/frances-detalle.jpg";
---

<div class="grid grid-cols-1 gap-6 lg:gap-y-32 md:grid-cols-2">
  <figure>
    <Image
      class="w-full rounded-3xl shadow-2xl aspect-square object-cover"
      src={coco}
      width={600}
      height={600 / 1.5}
      alt=""
    />
    <div class="mt-4 flex justify-between px-6">
      <div>
        <h3 class="text-sm text-negroni-500">
          <a href="#"> Producto Coco </a>
        </h3>
        <p class="mt-1 text-lg font-medium leading-6 text-white">
          Producto coco
        </p>
      </div>
      <p class="text-base text-tomato-500">$15</p>
    </div>
  </figure>
  <figure>
    <Image
      class="w-full rounded-3xl shadow-2xl aspect-square object-cover"
      src={rollo}
      alt=""
      width="1310"
      width={600}
      height={600 / 1.5}
    />
    <div class="mt-4 flex justify-between px-6">
      <div>
        <h3 class="text-sm text-negroni-500">
          <a href="#"> Producto Rollo </a>
        </h3>
        <p class="mt-1 text-lg font-medium leading-6 text-white">
          Producto rollo
        </p>
      </div>
      <p class="text-base text-tomato-500">$20</p>
    </div>
  </figure>
  <figure>
    <Image
      class="w-full rounded-3xl shadow-2xl aspect-square object-cover"
      src={surtido}
      width={600}
      height={600 / 1.5}
      alt=""
    />
    <div class="mt-4 flex justify-between px-6">
      <div>
        <h3 class="text-sm text-negroni-500">
          <a href="#"> Producto Surtido </a>
        </h3>
        <p class="mt-1 text-lg font-medium leading-6 text-white">
          Producto Surtido
        </p>
      </div>
      <p class="text-base text-tomato-500">$5</p>
    </div>
  </figure>
  <figure>
    <Image
      class="w-full rounded-3xl shadow-2xl aspect-square object-cover"
      width={600}
      height={600 / 1.5}
      src={frances}
      alt=""
    />
    <div class="mt-4 flex justify-between px-6">
      <div>
        <h3 class="text-sm text-negroni-500">
          <a href="#"> Producto frances </a>
        </h3>
        <p class="mt-1 text-lg font-medium leading-6 text-white">
          Producto Frances
        </p>
      </div>
      <p class="text-base text-tomato-500">$35</p>
    </div>
  </figure>
  <figure>
    <Image
      class="w-full rounded-3xl shadow-2xl aspect-square object-cover"
      width={600}
      height={600 / 1.5}
      src={francesDetalle}
      alt=""
    />
    <div class="mt-4 flex justify-between px-6">
      <div>
        <h3 class="text-sm text-negroni-500">
          <a href="#"> Producto Frances </a>
        </h3>
        <p class="mt-1 text-lg font-medium leading-6 text-white">
          Producto frances detalle
        </p>
      </div>
      <p class="text-base text-tomato-500">$35</p>
    </div>
  </figure>
</div>
